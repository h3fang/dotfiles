	"Beamer template (Madrid theme)": {
		"prefix": "beamer",
		"body": [
			"\\documentclass[aspectratio=169, compress]{beamer}",
			"",
			"\\usepackage{lmodern}",
			"\\usepackage{hyperref}",
			"\\usepackage{amsmath,amssymb,amsfonts,bm}",
			"\\usepackage{graphicx}",
			"\\usepackage[ruled, vlined, linesnumbered]{algorithm2e}",
			"\\usepackage{booktabs}",
			"\\usepackage{textpos}",
			"",
			"\\usetheme{Madrid}",
			"\\usecolortheme{seahorse}",
			"\\usefonttheme{professionalfonts}",
			"",
			"% custom colors",
			"\\setbeamercolor*{author in head/foot}{parent=palette secondary}",
			"\\setbeamercolor*{title in head/foot}{parent=palette primary}",
			"\\setbeamercolor*{date in head/foot}{parent=palette secondary}",
			"",
			"% remove total pages number",
			"% \\setbeamertemplate{page number in head/foot}[framenumber]",
			"",
			"% keep only frame number in footline",
			"\\setbeamertemplate{footline}[frame number]{}",
			"% keep only current frame number in footline",
			"% \\setbeamertemplate{footline}{\\raisebox{5pt}{\\makebox[\\paperwidth]{\\hfill\\makebox[3em]{\\scriptsize\\color{red}\\insertframenumber}}}}",
			"",
			"% remove navigation symbols",
			"\\setbeamertemplate{navigation symbols}{}",
			"",
			"% Information to be included in the title page",
			"\\title{Slide Title}",
			"% \\subtitle{}",
			"\\author{Fang He}",
			"\\institute{SEEM, City University of Hong Kong}",
			"\\date{\\today}",
			"",
			"\\AtBeginSection[] {",
			"    \\begin{frame}[noframenumbering,plain]{Outline}",
			"        \\tableofcontents[currentsection]",
			"    \\end{frame}",
			"}",
			"",
			"\\begin{document}",
			"",
			"\\begin{frame}[noframenumbering,plain]",
			"\\maketitle",
			"\\end{frame}",
			"",
			"\\begin{frame}{Frame Title}",
			"\\end{frame}",
			"",
			"\\begin{frame}[noframenumbering,plain]",
			"    \\centering",
			"    \\Huge Thank You!",
			"\\end{frame}",
			"",
			"\\end{document}",
			""
		],
		"description": "Beamer template (Madrid theme)"
	},
	"Beamer template (metropolis theme)": {
		"prefix": "beamer-metropolis",
		"body": [
			"\\documentclass[aspectratio=169, compress]{beamer}",
			"",
			"\\usepackage{lmodern}",
			"\\usepackage{hyperref}",
			"\\usepackage{amsmath,amssymb,amsfonts,bm}",
			"\\usepackage{graphicx}",
			"\\usepackage[ruled, vlined, linesnumbered]{algorithm2e}",
			"\\usepackage{booktabs}",
			"\\usepackage{textpos}",
			"",
			"\\usetheme[progressbar=frametitle]{metropolis}",
			"\\usefonttheme{professionalfonts}",
			"\\setsansfont{Latin Modern Sans}",
			"\\setmonofont{Latin Modern Mono}",
			"\\setbeamercolor{frametitle}{bg=, fg=black}",
			"",
			"\\makeatletter",
			"% reduce the frame title and foot line height",
			"\\setlength{\\metropolis@frametitle@padding}{1.6ex}% <- default 2.2 ex",
			"\\setbeamertemplate{footline}{",
			"    \\begin{beamercolorbox}[wd=\\textwidth, sep=1.5ex]{footline}% <- default 3ex",
			"        \\usebeamerfont{page number in head/foot}",
			"        \\usebeamertemplate*{frame footer}",
			"        \\hfill",
			"        \\usebeamertemplate*{frame numbering}",
			"    \\end{beamercolorbox}",
			"}",
			"",
			"% progress bar line width",
			"\\setlength{\\metropolis@titleseparator@linewidth}{1pt}",
			"\\setlength{\\metropolis@progressonsectionpage@linewidth}{1pt}",
			"\\setlength{\\metropolis@progressinheadfoot@linewidth}{1pt}",
			"\\makeatother",
			"",
			"% Information to be included in the title page",
			"\\title{Slide Title}",
			"% \\subtitle{}",
			"\\author{Fang He}",
			"\\institute{SEEM, City University of Hong Kong}",
			"\\date{\\today}",
			"",
			"\\AtBeginSection[]",
			"{",
			"    \\begin{frame}{Outline}",
			"        \\tableofcontents[currentsection]",
			"    \\end{frame}",
			"}",
			"",
			"\\begin{document}",
			"",
			"\\maketitle",
			"",
			"\\begin{frame}{Frame Title}",
			"\\end{frame}",
			"",
			"\\begin{frame}",
			"    \\centering",
			"    \\Huge Thank You!",
			"\\end{frame}",
			"",
			"\\end{document}",
			""
		],
		"description": "Beamer template (metropolis theme)"
	},
