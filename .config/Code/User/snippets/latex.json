	// }
	"Beamer template": {
		"prefix": "beamer",
		"body": [
			"\\documentclass[aspectratio=169, compress]{beamer}",
			"",
			"\\usepackage{tikz}",
			"\\usetikzlibrary{arrows,decorations.pathmorphing,backgrounds,positioning,fit,petri}",
			"\\usepackage{smartdiagram}",
			"\\usepackage{textpos}",
			"",
			"\\usetheme[progressbar=foot]{metropolis}",
			"% \\usetheme{Madrid}",
			"\\usecolortheme{beaver}",
			"",
			"% custom footline color",
			"\\setbeamercolor*{author in head/foot}{parent=palette secondary}",
			"\\setbeamercolor*{title in head/foot}{parent=palette primary}",
			"\\setbeamercolor*{date in head/foot}{parent=palette secondary}",
			"",
			"% remove total pages number",
			"% \\setbeamertemplate{page number in head/foot}[framenumber]",
			"",
			"% keep only frame number in footline",
			"% \\setbeamertemplate{footline}[frame number]{}",
			"\\setbeamertemplate{footline}{\\raisebox{5pt}{\\makebox[\\paperwidth]{\\hfill\\makebox[3em]{\\scriptsize\\color{red}\\insertframenumber}}}}",
			"",
			"% remove navigation symbols",
			"\\setbeamertemplate{navigation symbols}{}",
			"",
			"%Information to be included in the title page",
			"\\title{Slide Title}",
			"\\subtitle{}",
			"\\author{Fang He}",
			"\\institute{SEEM, CityU}",
			"\\date{\\today}",
			"",
			"\\begin{document}",
			"",
			"\\frame{\\titlepage}",
			"",
			"\\begin{frame}{Frame Title}",
			"\\end{frame}",
			"",
			"\\begin{frame}{\\ }",
				"\t\\centering \\Huge",
				"\tThank You!",
			"\\end{frame}",
			"",
			"\\end{document}",
			""
		],
		"description": "Beamer template"
	},
	"Latex common packages": {
		"prefix": "packages",
		"body": [
			"\\usepackage{xcolor}",
			"\\usepackage{amsmath, amssymb, amsfonts, bm, mathtools}",
			"\\usepackage{booktabs, multirow, array}",
			"\\usepackage{hyperref}",
			"%\\usepackage{graphicx, subcaption}",
			"%\\usepackage[margin=2cm]{geometry}",
			"%\\usepackage[ruled, vlined, linesnumbered]{algorithm2e}",
			"",
			"\\hypersetup{",
			"    colorlinks,",
			"    linkcolor={red!50!black},",
			"    citecolor={blue!50!black},",
			"    urlcolor={blue!80!black}",
			"}",
			""
		],
		"description": "Latex common packages"
	}
}
