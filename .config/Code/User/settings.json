{
    // Settings
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,

    // explorer
    "explorer.confirmDelete": false,

    // Editor
    "workbench.colorTheme": "Default Light+",
    "workbench.colorCustomizations": {
        "[Default Light+]": {
            "editor.background": "#e7e7e7",
            "tab.activeBackground": "#ccdccc"
        }
    },

    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}vscode",
    "editor.fontFamily": "'Hack', 'Noto Sans Mono CJK', 'monospace', 'FontAwesome', 'Font Awesome 5 Free', 'Font Awesome 5 Brands', 'Noto Color Emoji'",
    "editor.fontSize": 16,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 128,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "terminal.external.linuxExec": "xfce4-terminal",
    "terminal.integrated.rendererType": "dom",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000,
    "diffEditor.ignoreTrimWhitespace": false,

    // git
    "git.confirmSync": false,
    "git.autofetch": true,

    // C/C++
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "{BasedOnStyle: LLVM, IndentWidth: 4, ColumnLimit: 120, BreakBeforeBraces: Attach, AccessModifierOffset: -4, AllowShortBlocksOnASingleLine: Empty}",
    "C_Cpp.intelliSenseCachePath": "~/.cache/vscode-cpptools",
    "C_Cpp.intelliSenseCacheSize": 500,
    "C_Cpp.default.cppStandard": "c++17",

    // rust
    "rust-client.disableRustup": true,

    // python
    "python.showStartPage": false,
    "python.condaPath": "~/.local/miniconda3/bin/conda",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=128", "--ignore=E266", "--verbose"],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "128"
    ],
    "jupyter.askForKernelRestart": false,

    // Privacy
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.mode": "none",
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,

    // Latex
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "qpdfview",
    "latex-workshop.view.pdf.external.viewer.args": [
        "%PDF%"
    ],
    "latex-workshop.view.pdf.external.synctex.command": "qpdfview",
    "latex-workshop.view.pdf.external.synctex.args": [
        "--unique",
        "%PDF%#src:%TEX%:%LINE%:0"
    ],
    "latex-workshop.latex.outDir": "%DIR%/build",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk-xelatex",
            "tools": [
                "latexmk-xelatex"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk-xelatex",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdfxe",
                "-xelatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        }
    ],

    // spell checker
    "cSpell.userWords": [
        "autoencoder",
        "backend",
        "convolutional",
        "dataset",
        "discretize",
        "elsevier",
        "ensembling",
        "frobenius",
        "hyperparameters",
        "jacobian",
        "laplacian",
        "metaheuristic",
        "nonlinearly",
        "overdetermined",
        "overfit",
        "raphson",
        "stochasticity",
        "toeplitz",
        "voxel",
        "waypoint"
    ],
    "cSpell.diagnosticLevel": "Information",
    "cSpell.enabledLanguageIds": [
        "latex",
        "markdown",
        "git-commit",
        "text",
        "plaintext"
    ],

    // misc.
    "bracket-pair-colorizer-2.colors": [],
    "files.associations": {
        "*.geojson": "json"
    },
}
