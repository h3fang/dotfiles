{
    // Settings,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,

    // Editor
    "workbench.colorTheme": "Default Light+",
    "workbench.colorCustomizations": {
        "[Default Light+]": {
            "editor.background": "#fafaf6",
        }
    },

    "window.zoomLevel": 0,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}vscode",
    "editor.fontFamily": "'Hack', 'Noto Sans Mono CJK', 'monospace', 'FontAwesome', 'Noto Color Emoji'",
    "editor.fontSize": 16,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 128,
    "editor.tokenColorCustomizations": {
        "[Quiet Light]": {
            "comments": "#008000"
        }
    },
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "terminal.external.linuxExec": "xfce4-terminal",
    "terminal.integrated.rendererType": "dom",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000,
    "git.confirmSync": false,

    // C/C++
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "{BasedOnStyle: LLVM, IndentWidth: 4}",
    "C_Cpp.intelliSenseCachePath": "~/.cache/vscode-cpptools",
    "C_Cpp.intelliSenseCacheSize": 500,

    // python
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": false,
    "python.formatting.provider": "none",
    "python.condaPath": "~/.local/miniconda3/bin/conda",

    // Privacy
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.mode": "none",
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "workbench.settings.enableNaturalLanguageSearch": false,

    // Latex
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.command": {
        "command": "qpdfview",
        "args": [
            "--unique",
            "%PDF%"
        ]
    },
    "latex-workshop.view.pdf.external.synctex": {
        "command": "qpdfview",
        "args": [
            "--unique",
            "%PDF%#src:%TEX%:%LINE%:0"
        ]
    },
    "latex-workshop.latex.outDir": "%DIR%/build",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk-xelatex",
            "tools": [
                "latexmk-xelatex"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk-xelatex",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdfxe",
                "-xelatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "scp",
            "command": "scp",
            "args": [
                "%OUTDIR%/%DOCFILE%.pdf",
                "nso:~/Downloads/%DOCFILE%.pdf"
            ]
        }
    ],

    // spell checker
    "cSpell.userWords": [
        "autoencoder",
        "backend",
        "convolutional",
        "dataset",
        "discretize",
        "elsevier",
        "ensembling",
        "frobenius",
        "hyperparameter",
        "jacobian",
        "laplacian",
        "metaheuristic",
        "nonlinearly",
        "overdetermined",
        "overfit",
        "raphson",
        "stochasticity",
        "toeplitz",
        "voxel",
        "waypoint"
    ],
    "cSpell.diagnosticLevel": "Information",
    "cSpell.enabledLanguageIds": [
        "latex",
        "markdown",
        "git-commit",
        "text",
        "plaintext"
    ]
}
