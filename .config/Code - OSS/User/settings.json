{
    // Editor
    "workbench.colorTheme": "Default Light+",
    "workbench.colorCustomizations": {
        "[Default Light+]": {
            "editor.background": "#fcfafb",
        }
    },

    "window.zoomLevel": 0,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}code-oss",
    "editor.fontFamily": "'Hack', 'Noto Sans CJK', 'Noto Color Emoji'",
    "editor.fontSize": 16,
    "editor.wordWrap": "bounded",
    "editor.tokenColorCustomizations": {
        "[Quiet Light]": {
            "comments": "#008000"
        }
    },
    "terminal.external.linuxExec": "xfce4-terminal",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000,
    "git.confirmSync": false,

    // C/C++
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "{BasedOnStyle: LLVM, IndentWidth: 4}",

    // python
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": false,

    // Privacy
    "workbench.statusBar.feedback.visible": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.channel": "none",
    "extensions.ignoreRecommendations": true,
    "workbench.settings.enableNaturalLanguageSearch": false,

    // Latex
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.command": {
        "command": "qpdfview",
        "args": [
            "--unique",
            "%PDF%"
        ]
    },
    "latex-workshop.view.pdf.external.synctex": {
        "command": "qpdfview",
        "args": [
            "--unique",
            "%PDF%#src:%TEX%:%LINE%:0"
        ]
    },
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-outdir=build",
                "-file-line-error",
                "-pdfxe",
                "-xelatex",
                "%DOC%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-output-directory=build",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "build/%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.outputDir": "./build/",
    "latex-workshop.latex.clean.enabled": false,
    "cSpell.userWords": [
        "autoencoder",
        "dataset",
        "elsevier",
        "frobenius",
        "jacobian",
        "nonlinearly",
        "overdetermined",
        "toeplitz"
    ],
    "cSpell.diagnosticLevel": "Information",
    "cSpell.enabledLanguageIds": [
        "latex"
    ],
    "editor.wordWrapColumn": 128,
    "python.formatting.provider": "none"
}
